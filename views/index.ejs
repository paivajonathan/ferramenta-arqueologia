<%- include("./partials/header.ejs"); %>
    <link rel="stylesheet" type="text/css" href="/css/index.css" />

    <form action="/save-raw-image" method="POST" enctype="multipart/form-data">
        <label for="raw-image-input" id="label-button">Selecionar imagem</label>
        <div style="display: none;" id="raw-image-name"></div>
        <input style="display: none;" type="file" accept="image/png, image/jpeg" name="rawImage" id="raw-image-input" />
        <button style="display: none;" type="submit" id="send-image">Enviar imagem</button>
    </form>

    <script>
        document.querySelector("#raw-image-input").onchange = function(){
            document.querySelector("#raw-image-name").textContent = this.files[0].name;
            document.querySelector("#raw-image-name").style.display = "block";
            document.querySelector("#send-image").style.display = "inline-block";
        }
    </script>

